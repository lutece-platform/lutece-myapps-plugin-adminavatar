<?xml version="1.0" encoding="UTF-8" standalone="no"?><plug-in>
    <name>adminavatar</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.1-SNAPSHOT</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>adminavatar.plugin.description</description>
    <provider>adminavatar.plugin.provider</provider>
    <provider-url>http://dev.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/adminavatar/adminavatar.png</icon-url>
    <copyright>Copyright (c) City of Paris</copyright>
    <db-pool-required>0</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>5.0.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>ADMINAVATAR_MANAGEMENT</feature-id>
            <feature-title>adminavatar.adminFeature.ManageAdminAvatar.name</feature-title>
            <feature-description>adminavatar.adminFeature.ManageAdminAvatar.description</feature-description>
            <feature-level>3</feature-level>
            <feature-url>jsp/admin/plugins/adminavatar/ManageAdminAvatar.jsp</feature-url>
            <feature-icon-url/>
      </admin-feature>
    </admin-features>    
   
    <!-- servlets -->
     <servlets>
          <servlet>
               <servlet-name>adminavatar</servlet-name>
               <url-pattern>/servlet/plugins/adminavatar/avatar</url-pattern>
               <servlet-class>fr.paris.lutece.plugins.adminavatar.web.AvatarServlet</servlet-class>
          </servlet>
     </servlets>

</plug-in>